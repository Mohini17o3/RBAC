generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  roleId    String   @db.ObjectId
  role      Role     @relation(fields: [roleId], references: [id])
  status    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  roleId      String[]     @db.ObjectId
  name        String       @unique
  permissions Permission[] @relation(fields: [roleId], references: [id])

  users User[]
}

model Permission {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  permissionId String[] @db.ObjectId
  name         String
  description  String
  roles        Role[]   @relation(fields: [permissionId], references: [id])
}
